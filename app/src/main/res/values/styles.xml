<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MainMyToolbarStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/md_white_1000</item>
        <item name="actionMenuTextColor">@color/md_white_1000</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textSize">22sp</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/md_white_1000</item>
        <item name="android:colorControlNormal">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_white_1000</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="GenericDialogTheme">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="YesBtn" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:text">Yes</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NoBtn" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:text">Cancel</item>
        <item name="android:background">@color/md_red_800</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>